<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        android:background="@drawable/border_cardview"
        android:layout_margin="7dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:weightSum="10">
        <ImageView
            android:id="@+id/ico_import_db"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ico_importacin_base_de_datos_peq"
            android:layout_weight="3"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#ffe57f"
            android:weightSum="2">
            <TextView
                android:id="@+id/import_tit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/import_pro"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/import_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/import_info"
                android:paddingLeft="15dp"
                android:layout_weight="1"/>

        </LinearLayout>



    </LinearLayout>
    </android.support.v7.widget.CardView>
